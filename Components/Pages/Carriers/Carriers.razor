@page "/carriers"
@using Mantis.Domain.Carriers.Models
@using Syncfusion.Blazor.Grids
@using Syncfusion.Blazor.Navigations
@using Syncfusion.Blazor.Data
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor
@rendermode InteractiveServer

<SfGrid @ref="Grid" DataSource="@CarrierData" AllowPaging="true" AllowSorting="true" Toolbar="@(new List<string>() { "Add", "Edit", "Delete", "Update", "Search" })">
    <SfDataManager Url="https://localhost:7074/api/Carrier" Adaptor="Adaptors.UrlAdaptor"></SfDataManager>
    <GridEditSettings AllowAdding="true" AllowEditing="true" AllowDeleting="true" Mode="EditMode.Dialog"></GridEditSettings>
    <GridPageSettings PageSize="12"></GridPageSettings>
    <GridColumns>
        <GridColumn Field=@nameof(Carrier.CarrierId) HeaderText="Id" IsIdentity="true" ValidationRules="@(new ValidationRules{ Required= true })" IsPrimaryKey="true"></GridColumn>
        <GridColumn Field=@nameof(Carrier.CarrierName) HeaderText="Carrier Name"></GridColumn>
        <GridColumn Field=@nameof(Carrier.Phone) HeaderText="Customer Name"></GridColumn>
    </GridColumns>
</SfGrid>

@code {
    SfGrid<Carrier> Grid { get; set; }
    public List<Carrier> CarrierData { get; set; }
}