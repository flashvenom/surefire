<div @onmouseleave="() => ExpandDetails(1)">

    <SfBreadcrumb>
        <BreadcrumbItems>
            <BreadcrumbItem Text="Clients" Url="/Clients" />
            <BreadcrumbItem Text="List" />
            <BreadcrumbItem Text="View" />
        </BreadcrumbItems>
    </SfBreadcrumb>

