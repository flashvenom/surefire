@page "/"
@using Mantis.Domain.Renewals.ViewModels
@using Mantis.Domain.Renewals.Services
@inject TaskService TaskService

<PageTitle>Home</PageTitle>

<div class="page-content">
    <img src="/img/banner.jpg" class="img-fluid" />
    <div style="display:flex; flex-direction:row; justify-content:space-between; background-color:#fff !important; position:relative; top:-5px; padding-bottom:30px;">
        <div>
            <div class="sectiontitle">Renewal Task Items</div>
            @if (tasks == null)
            {
                <p>Loading tasks...</p>
            }
            else if (!tasks.Any())
            {
                <p>No tasks available.</p>
            }
            else
            {
                <table id="tasktable" cellspacing="0" class="ttable">
                    <thead>
                        <tr>
                            <th>Client</th>
                            <th>Policy</th>
                            <th>Task</th>
                            @* <th>Note</th> *@
                            <th>Priority</th>
                            @* <th></th> *@
                        </tr>
                    </thead>
                    <tbody class="tbody">
                        @foreach (var task in tasks)
                        {
                            <tr class="trow @(task.Highlighted ? "highlighted" : "")">
                                <td class="tcname">@task.ClientName </td>
                                <td><span class="hprod">@task.PolicyProduct</span><span class="hexp">@task.RenewalDate.ToString("MM/dd")</span></td>
                                <td class="ttname"><a href="Renewals/@task.RenewalId">@task.TaskName</a></td>
                                @* <td class="ttnote">@task.TaskNote</td> *@
                                <td class="ttpri">@((MarkupString)task.Priority)</td>
                                @* <td><a href="Clients/List/@task.ClientId">CL</a> | DONE</td> *@
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
        <div style="padding-top:30px;">
            <div class="sectiontitle2">Incomplete Tasks</div>
            @if (incompletetasks == null)
            {
                <p>Loading tasks...</p>
            }
            else if (!incompletetasks.Any())
            {
                <p>No tasks available.</p>
            }
            else
            {
                <table id="tasktable" cellspacing="0" class="ttable tt2">
                    <thead>
                        <tr>
                            @* <th>Client</th> *@
                            <th>Policy</th>
                            <th>Task</th>
                        </tr>
                    </thead>
                    <tbody class="tbody">
                        @foreach (var task in incompletetasks)
                        {
                            <tr class="trow @(task.Highlighted ? "highlighted" : "")">
                                @* <td class="tcname">@task.ClientName </td> *@
                                <td><span class="hprod">@task.PolicyProduct</span><span class="hexp">@task.RenewalDate.ToString("MM/dd")</span></td>
                                <td class="ttname"><a href="Renewals/@task.RenewalId">@task.TaskName</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
        <div>
            <div class="sectiontitle">Daily Task List</div>
            (  ) Task List Items Go Here<br />
