@page "/"
@using Mantis.Domain.Renewals.ViewModels
@using Mantis.Domain.Renewals.Services
@inject TaskService TaskService

<PageTitle>Home</PageTitle>

<div class="page-content" style="padding:0px !important; height:100%;">
    <img src="/img/banner3.png" class="img-fluid" />
    <div class="home-content">
        <div>
            <div class="sectiontitletab">Renewal Task Items</div>
            <div class="home-box">
                @if (tasks == null)
                {
                    <p>Loading tasks...</p>
                }
                else if (!tasks.Any())
                {
                    <p>No tasks available.</p>
                }
                else
                {
                    <table id="tasktable" cellspacing="0" class="ttable">
                        <thead class="tbg">
                            <tr>
                                <th>Client</th>
                                <th>Policy</th>
                                <th>Task</th>
                                <th>Priority</th>
                            </tr>
                        </thead>
                        <tbody class="tbody">
                            @foreach (var task in tasks)
                            {
                                <tr class="trow @(task.Highlighted ? "highlighted" : "")">
                                    <td class="tcname">@task.ClientName </td>
                                    <td><span class="hprod">@task.PolicyProduct</span><span class="hexp">@task.RenewalDate.ToString("MM/dd")</span></td>
                                    <td class="ttname"><a href="Renewals/@task.RenewalId">@task.TaskName</a></td>
                                    @* <td class="ttnote">@task.TaskNote</td> *@
                                    <td class="ttpri">@((MarkupString)task.Priority)</td>
                                    @* <td><a href="Clients/List/@task.ClientId">CL</a> | DONE</td> *@
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
        <div>
            <div class="sectiontitletab">Incomplete Tasks</div>
            <div class="home-box">
                @if (incompletetasks == null)
                {
                    <p>Loading tasks...</p>
                }
                else if (!incompletetasks.Any())
                {
                    <p>No tasks available.</p>
                }
                else
                {
                    <table id="tasktable" cellspacing="0" class="ttable tt2">
                        <thead class="tbg">
                            <tr>
                                @* <th>Client</th> *@
                                <th>Policy</th>
                                <th>Task</th>
                            </tr>
                        </thead>
                        <tbody class="tbody">
                            @foreach (var task in incompletetasks)
                            {
                                <tr class="trow @(task.Highlighted ? "highlighted" : "")">
                                    @* <td class="tcname">@task.ClientName </td> *@
                                    <td><span class="hprod">@task.PolicyProduct</span><span class="hexp">@task.RenewalDate.ToString("MM/dd")</span></td>
                                    <td class="ttname"><a href="Renewals/@task.RenewalId">@task.TaskName</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
        <div style="width:500px; opacity:.5;">
            <div class="sectiontitletab">Daily Tasks</div>
            <div class="home-box">
                <h3>Coming Soon</h3>
            </div>
            <div style="height:50px;"></div>
            <div class="sectiontitletab">Upcoming Renewals</div>
            <div class="home-box">
                <h3>Coming Soon</h3>
            </div>
        </div>
    </div>
</div>

<style>
    :root tr td, tr th {
        padding: 3px 10px;
    }

    :root .tt2 tr td, tr th {
        padding: 0px 3px;
    }

</style>

@code {
    private List<HomePageTasksViewModel> tasks;
    private List<HomePageTasksViewModel> incompletetasks;

    protected override async Task OnInitializedAsync()
    {
        tasks = await TaskService.GetHomePageTasksAsync();
        incompletetasks = await TaskService.GetIncompleteTasksForCurrentUserAsync();
    }

    protected override void OnInitialized()
    {
        BreadcrumbService.UpdateBreadcrumb(new List<BreadcrumbItem>
        {
            new BreadcrumbItem { Text = "Home" }
        });
    }
}