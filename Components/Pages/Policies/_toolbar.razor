@namespace Mantis.Components.Pages.Policies
@using Microsoft.FluentUI.AspNetCore.Components
@using Syncfusion.Blazor.Buttons
@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager NavigationManager

<div class="page-toolbar">
    <SfButton @onclick="@((args) => NavigateToRenewalCreate())" CssClass="e-primary" IconCss="e-icons e-plus-icon">New Policy</SfButton>

    <span class="sf-verthr"></span>

    <NavLink class="toolbar-link" href="Policies" Match="NavLinkMatch.Prefix">
        <FluentIcon Value="@(new Icons.Regular.Size24.Book())" />
        <span class="toolbar-text">Browse</span>
    </NavLink>

    <NavLink class="toolbar-link" href="Policies/Products" Match="NavLinkMatch.Prefix">
        <FluentIcon Value="@(new Icons.Regular.Size24.Tag())" />
        <span class="toolbar-text">Product Lines</span>
    </NavLink>

    @if (PolicyId != 0)
    {
        <span class="sf-verthr2"></span>

        <NavLink class="toolbar-link" href="@("Policies/Edit/" + PolicyId)" Match="NavLinkMatch.Prefix">
            <FluentIcon Value="@(new Icons.Regular.Size24.PenSparkle())" />
            <span class="toolbar-text">Edit</span>
        </NavLink>
    }

    @if (EditMode == true)
    {
        <span class="sf-verthr2"></span>

        <NavLink class="toolbar-link" Match="NavLinkMatch.Prefix">
            <FluentIcon Value="@(new Icons.Regular.Size24.ArrowSyncCircle())" />
            <span class="toolbar-text">Sync</span>
        </NavLink>
    }
</div>

@code {
    [Parameter]
    public int PolicyId { get; set; }

    [Parameter]
    public bool EditMode { get; set; } = false;

    private void NavigateToRenewalCreate()
    {
        NavigationManager.NavigateTo("/Policies");
    }
}
