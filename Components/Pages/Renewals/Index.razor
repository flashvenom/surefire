        <NavLink class="toolbar-link" @onclick="ShowSelected" Match="NavLinkMatch.Prefix">
            <FluentIcon Value="@(new Icons.Regular.Size24.BookStar())" />
            <span class="toolbar-text">Renewal</span>
        </NavLink>
    </span> *@

